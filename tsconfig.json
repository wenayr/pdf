{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    //"noUncheckedIndexedAccess": true,
    "strict": true,

    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "strictPropertyInitialization": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    //"module": "commonjs",
    "module": "esnext",
    "target": "ESNext",
    "lib": [
      "ESNext",
      //"DOM"
    ],
    //"skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "my_modules/*",
        //"src/types/*",
        "types/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "my_modules",
    //"src/**/*_exclude.*",
    //"src/exclude",
  ],
  "references": [
//    { "path": "./my_modules/unoconv_my2" },
//    { "path": "./my_modules/node-convert_my" }
  ]
}

